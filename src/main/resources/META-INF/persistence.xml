<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- nombre de nuestra unidad de persistencia-->
    <persistence-unit name="miUnidadPersistencia">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- clases (tablas) -->
        <class>model.Concesionario</class>
        <class>model.Coche</class>
        <class>model.Venta</class>
        <class>model.Propietario</class>
        <class>model.Equipamiento</class>
        <class>model.Reparacion</class>
        <class>model.Mecanico</class>

        <properties>
            <!-- url y usario -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/concesionario?createDatabaseIfNotExist=true&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <!-- contraseÃ±a y driver-->
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- estrategia para crear las tablas -->
            <!-- 'update' crea la tabla si no existe, o la actualiza si cambias la clase Java. -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Dialecto: Ayuda a Hibernate a optimizar SQL para MySQL 8 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
        </properties>

    </persistence-unit>
</persistence>